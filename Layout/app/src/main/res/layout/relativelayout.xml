<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_tencent"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:src="@drawable/tencenticon"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:id="@+id/et_username"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/img_tencent"
        android:layout_marginTop="105dp"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/img_tencent"
        android:layout_below="@+id/et_username"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget username"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/et_username"
        android:layout_alignBottom="@+id/et_username"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget password"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/et_password"
        android:layout_alignBottom="@+id/et_password"/>

</RelativeLayout>